# WEAV AI infra 환경변수 예시
# [필수] 서비스 실행에 필요
# [선택] 기능 사용 시에만 필요

# [필수] Django 기본
SECRET_KEY=your-secret-key
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# [필수] DB
POSTGRES_DB=weavai
POSTGRES_USER=weavai_user
POSTGRES_PASSWORD=your-password

# [필수] MinIO 스토리지
MINIO_DATA_DIR=./minio-data
MINIO_ACCESS_KEY=weavai_admin
MINIO_SECRET_KEY=your-long-secret
MINIO_BUCKET=weavai-files

# [필수] AI 키
OPENAI_API_KEY=
OPENAI_TEXT_MODEL=gpt-4o-mini
GEMINI_API_KEY=
GEMINI_TEXT_MODEL=gemini-1.5-flash
AI_PROVIDER_DEFAULT=openai
MAX_TEXT_CHARS=8000
MAX_OUTPUT_TOKENS=1024

# [선택] Firebase Admin (로그인 테스트 시 필요)
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=

# [선택] 외부 접근
ENABLE_EXTERNAL_ACCESS=false

# [선택] 결제/멤버십
ENABLE_BILLING=false
ENFORCE_MEMBERSHIP=false
ALLOW_BILLING_IN_DEBUG=false
USE_PORTONE=false
USE_STRIPE=false
PORTONE_API_SECRET=
PORTONE_WEBHOOK_SECRET=
FRONTEND_URL=

# [선택] 백업/모니터링
BACKUP_ROOT=/Volumes/WEAVAI_2T/weavai-backups
HEALTHCHECK_URLS=http://localhost:8080/healthz,http://localhost:8080/api/v1/health/
MONITOR_WEBHOOK_URL=
MONITOR_WEBHOOK_FORMAT=slack
HEALTHCHECK_TIMEOUT_SECONDS=5
